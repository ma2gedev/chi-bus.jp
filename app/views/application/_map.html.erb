<% if bus_stops.present? then %>
  <div id="map" class="map"></div>
  <div class="clearfix">
    <%= link_to '中心付近を検索', '#', class: 'btn btn-default pull-left', data: { 'search-map-center' => '' } %>
    <div class="checkbox pull-left draggable-checkbox">
      <label><input type="checkbox" data-toggle-draggable> 地図をロック</label>
    </div>
  </div>
  <script type="text/javascript">
markersJson = <%= raw build_markers(bus_stops, params[:position]).to_json %>;
polylinesJson = <%= raw bus_routes ? build_routes_hash(bus_routes).to_json : false %>;
busStopsCount = <%= bus_stops.size %>;
centerMakerImagePath = <%= raw "'#{image_path('red_cross.png')}'" %>;
drawMap(markersJson, polylinesJson, busStopsCount, centerMakerImagePath);
  </script>
<% end %>
